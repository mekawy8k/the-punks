<style is:global>
    *{
        box-sizing: border-box;
    }
    @font-face {
        font-family: "MacPaw";
        src: url(../assets/fonts/FixelText/FixelText-Regular.woff2)
            format("woff2");
    }
    * {
        font-family: "MacPaw";
    }
    .wrapper {
        width: 90%;
        margin: 0 auto;
    }
    @media (min-width: 696px;) {
        .wrapper {
            width: 84%;
        }
    }
    .flex {
        display: flex;
    }
    .center {
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    body{
		background: var(--bg);
	}
    .two-side-grid{
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr 1fr;
    }
    @media (min-width: 696px) {
        .two-side-grid{
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr;
        }
    }
</style>
